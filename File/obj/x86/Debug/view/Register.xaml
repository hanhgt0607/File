<Page
    x:Class="File.view.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:File.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="20, 20, 20, 0">
        <TextBox x:ConnectionId='2' x:Name="name" Header="Name" Margin="0, 0, 0, 20"></TextBox>
        <TextBox x:ConnectionId='3' x:Name="phone" Header="Phone" Margin="0, 0, 0, 20"></TextBox>
        <TextBox x:ConnectionId='4' x:Name="email" Header="Email" Margin="0, 0, 0, 20"></TextBox>
        <Button x:ConnectionId='5' x:Name="Button" Content="Save" Margin="0, 0, 0, 20"                  ></Button>
        <Button x:ConnectionId='6' x:Name="Load" Content="Loader" Margin="0, 0, 0, 20"                  ></Button>
    </StackPanel>
</Page>

